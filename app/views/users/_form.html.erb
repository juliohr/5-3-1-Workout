<%= simple_form_for @user do |f| %>
  <%= f.input :first_name, inline_label: 'First Name' %>
  <%= f.input :last_name, inline_label: 'Last Name' %>
  <%= f.input :email, inline_label: 'Email', placeholder: 'example@domain.com' %>
  <%= f.input :password, inline_label: 'Password' %>
  <%= f.button :submit %>
<% end %>